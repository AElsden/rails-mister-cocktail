<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= cl_image_path @cocktail.photo, crop: :fill%>');">
  <h1><%= @cocktail[:name] %></h1>
</div>

<div class=''>

<%= link_to "Add Ingredients", new_cocktail_dose_path(@cocktail) %>

<% @cocktail.doses.each do |dose| %>
    <%= dose.description %>
    <%= dose.ingredient.name %>
    <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
    <i class="fa fa-trash destroy_dose"></i>
    <% end %>
<%end %>

<div class=''>
<%= link_to 'back to list', cocktails_path %>
</div>
