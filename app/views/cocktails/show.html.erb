<div class="banner-show" style="background-image: linear-gradient(rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2)), url('<%= cl_image_path @cocktail.photo, crop: :fill%>');">
  <h1><%= @cocktail[:name] %></h1>
  <br>
<button>
  <%= link_to 'Add Ingredients', new_cocktail_dose_path(@cocktail), class: "btn-medium"%>
</button>

<br>
<% @cocktail.doses.each do |dose| %>
    <h3><%= dose.description %></h3>
    <h3><%= dose.ingredient.name %></h3>
    <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
    <i class="fa fa-trash destroy_dose"></i>
    <% end %>
<%end %>
</div>



<div class=''>
<%= link_to 'back to list', cocktails_path %>
</div>
